@page
@model AltaP.Pages.Products.CreateProductModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-md-12">
        <a asp-page="@PageReference.PRODUCTS_ALL" class="btn btn-secondary float-end">Volver</a>
    </div>
</div>

<h2 class="mt-4">Nuevo producto</h2>

<div class="row">
    <form method="post">
        <div class="form-group mt-3">
            <label asp-for="Product.Name" class="control-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Product.Code" class="control-label"></label>
            <input asp-for="Product.Code" class="form-control" />
            <span asp-validation-for="Product.Code" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Product.Price" class="control-label"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 ml-0">
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
